<?xml version="1.0"?>
<config>
    <modules>
        <Clean_ElasticSearch>
            <version>1.0.0</version>
        </Clean_ElasticSearch>
    </modules>
    <global>
        <blocks>
            <adminhtml>
                <rewrite>
                    <page_header>Clean_ElasticSearch_Block_Page_Header</page_header>
                </rewrite>
            </adminhtml>
        </blocks>

        <helpers>
            <cleanelastic>
                <class>Clean_ElasticSearch_Helper</class>
            </cleanelastic>
        </helpers>

        <models>
            <cleanelastic>
                <class>Clean_ElasticSearch_Model</class>
            </cleanelastic>
        </models>

        <index>
            <indexer>
                <cleanelastic_indexer>
                    <model>cleanelastic/indexer</model>
                </cleanelastic_indexer>
            </indexer>
        </index>

        <events>
            <customer_save_commit_after>
                <observers>
                    <cleanelastic_customer_save_commit_after>
                        <class>Clean_ElasticSearch_Model_Observer</class>
                        <method>customerSaveCommitAfter</method>
                    </cleanelastic_customer_save_commit_after>
                </observers>
            </customer_save_commit_after>
            <sales_order_place_after>
                <observers>
                    <cleanelastic_sales_order_place_after>
                        <class>Clean_ElasticSearch_Model_Observer</class>
                        <method>salesOrderPlaceAfter</method>
                    </cleanelastic_sales_order_place_after>
                </observers>
            </sales_order_place_after>
        </events>
    </global>
    <default>
        <catalog>
            <search>
                <elasticsearch_enable_debug_mode>0</elasticsearch_enable_debug_mode>
                <elasticsearch_enable_suggest>1</elasticsearch_enable_suggest>
                <elasticsearch_servers>127.0.0.1:9200</elasticsearch_servers>
                <elasticsearch_verify_host>1</elasticsearch_verify_host>
                <elasticsearch_timeout>5</elasticsearch_timeout>
                <elasticsearch_index_prefix/>
                <elasticsearch_number_of_shards>5</elasticsearch_number_of_shards>
                <elasticsearch_number_of_replicas>0</elasticsearch_number_of_replicas>
                <elasticsearch_safe_reindex>1</elasticsearch_safe_reindex>
                <elasticsearch_query_operator>AND</elasticsearch_query_operator>
                <elasticsearch_enable_source>0</elasticsearch_enable_source>
                <elasticsearch_enable_fuzzy_query>1</elasticsearch_enable_fuzzy_query>
            </search>
        </catalog>
    </default>
</config>